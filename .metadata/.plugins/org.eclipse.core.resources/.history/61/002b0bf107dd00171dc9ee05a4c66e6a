#ifndef CAMERA_H_
#define CAMERA_H_

#include "Vector/vec3.h"
class Camera {
public:
	Camera();
	~Camera();
	void move();

	bool goingForward;
	bool goingBackward;
	bool goingLeft;
	bool goingRight;
	void resetStates();
	const Vec3& getPosition() const;
	void setPosition(const Vec3& position);

protected:
	Vec3 position;
	Vec3 rotation;


};

#endif /* CAMERA_H_ */
