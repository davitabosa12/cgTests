#ifndef CAMERA_H_
#define CAMERA_H_

#include "Vector/vec3.h"
class Camera {
public:
	Camera();
	~Camera();
protected:
	Vec3 position;
	Vec3 rotation;

	bool goingForward;
	bool goingBackward;
	bool goingLeft;
	bool goingRight;
};

#endif /* CAMERA_H_ */
